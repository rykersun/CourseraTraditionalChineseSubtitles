{
    "manifest_version": 3,
    "name": "Coursera Subtitle Translation",
    "version": "0.0.3",
    "content_scripts": [
        {
            "matches": ["*://*.coursera.org/*"],
            "js": ["js/content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": ["*://*.coursera.org/*"],
            "resources": ["js/languages.js"]
        }
    ],
    "action": {
        "default_icon": {
            "16": "icons/16b.png",
            "32": "icons/32b.png"
        },
        "default_popup": "html/popup.html"
    },
    "icons": {
        "16": "icons/16b.png",
        "32": "icons/32b.png",
        "48": "icons/48b.png",
        "128": "icons/128b.png"
    },
    "background": { "service_worker": "js/background.js" },
    "permissions": ["tabs", "storage", "activeTab"]
}
