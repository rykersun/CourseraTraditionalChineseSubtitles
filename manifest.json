{
    "manifest_version": 3,
    "name": "Coursera Subtitle Translation",
    "version": "0.0.1",
    "content_scripts": [
        {
            "matches": ["*://*.coursera.org/*"],
            "js": ["js/content.js"]
        }
    ],
    "action": {
        "default_icon": {
            "16": "icons/16b.png",
            "32": "icons/32b.png"
        }
    },
    "icons": {
        "16": "icons/16b.png",
        "32": "icons/32b.png",
        "48": "icons/48b.png",
        "128": "icons/128b.png"
    },
    "background": { "service_worker": "js/background.js" }
}
