{
    "manifest_version": 3,
    "name": "Coursera Subtitle Translation",
    "version": "0.0.1",
    "content_scripts": [
        {
            "matches": ["*://www.coursera.org/*"],
            "js": ["js/content.js"]
        }
    ],
    "action": {
        "default_icon": {
            "16": "icons/favicon16.png",
            "32": "icons/favicon32.png"
        }
    },
    "icons": {
        "16": "icons/favicon16.png",
        "32": "icons/favicon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": { "service_worker": "js/background.js" }
}
